{
    "ExampleIF": {
        "version": "NeuroMLlite v0.1.9", 
        "parameters": {
            "V0": -70, 
            "in_rate": 50, 
            "scale": 1, 
            "in_weight": 0.01, 
            "tauMem": 20.0, 
            "theta": -50.0, 
            "tauSyn": 0.1, 
            "tauRef": 2
        }, 
        "notes": "Example with IF", 
        "cells": [
            {
                "ifcell": {
                    "pynn_cell": "IF_curr_alpha", 
                    "parameters": {
                        "tau_refrac": "tauRef", 
                        "tau_m": "tauMem", 
                        "i_offset": 0, 
                        "cm": 0.001, 
                        "v_thresh": "theta", 
                        "v_rest": "V0", 
                        "v_reset": "V0"
                    }
                }
            }, 
            {
                "poisson_input": {
                    "pynn_cell": "SpikeSourcePoisson", 
                    "parameters": {
                        "duration": 1000000000.0, 
                        "start": 0, 
                        "rate": "in_rate"
                    }
                }
            }
        ], 
        "synapses": [
            {
                "ampa": {
                    "pynn_synapse_type": "curr_alpha", 
                    "pynn_receptor_type": "excitatory", 
                    "parameters": {
                        "tau_syn": 0.1
                    }
                }
            }
        ], 
        "regions": [
            {
                "region1": {
                    "x": 0.0, 
                    "y": 0.0, 
                    "z": 0.0, 
                    "width": 1000.0, 
                    "height": 100.0, 
                    "depth": 1000.0
                }
            }
        ], 
        "populations": [
            {
                "IFpop": {
                    "size": "1*scale", 
                    "component": "ifcell", 
                    "properties": {
                        "color": ".9 0 0", 
                        "radius": 5
                    }, 
                    "random_layout": {
                        "region": "region1"
                    }
                }
            }, 
            {
                "expoisson": {
                    "size": "10", 
                    "component": "poisson_input", 
                    "properties": {
                        "color": "0.9 0.7 0.7", 
                        "radius": 3
                    }, 
                    "random_layout": {
                        "region": "region1"
                    }
                }
            }
        ], 
        "projections": [
            {
                "projEinput": {
                    "presynaptic": "expoisson", 
                    "postsynaptic": "IFpop", 
                    "synapse": "ampa", 
                    "delay": 0, 
                    "weight": "in_weight", 
                    "random_connectivity": {
                        "probability": 1
                    }
                }
            }
        ]
    }
}